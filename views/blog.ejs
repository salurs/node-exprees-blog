<%- include('./partials/head')-%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/uploads/<%= blog.image %>')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= blog.title %></h1>
            <h2 class="subheading"><%= blog.subtitle %></h2>
            <span class="meta">Posted by
              <a href="#"><%= blog.author %></a>
              on <%= blog.newDate %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <p><%- blog.body %></p>
        </div>
        <div class="col-lg-4 border-left">
         <p class="">
           <div class="font-weight-bold">Lastest Blogs</div>
          <ul>
            <% if(lastBlogs){ %>
              <% lastBlogs.forEach(function(blog){ %>
                <li><a href="/blog/<%= blog.slug %>"><%= blog.title %></a></li>
              <% }); %>
            <% } %>
          </ul>
         </p>
        </div>
      </div>
    </div>
  </article>

  <hr>


  
  <%- include('./partials/footer')-%>
